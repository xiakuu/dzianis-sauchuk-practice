<?xml version="1.0" encoding="UTF-8"?>
    <databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:mongodb="http://www.liquibase.org/xml/ns/mongodb"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd
    http://www.liquibase.org/xml/ns/mongodb
    http://www.liquibase.org/xml/ns/mongodb/liquibase-mongodb-4.3.xsd">

    <changeSet id="1" author="root">
    <mongodb:createCollection collectionName="documents"/>
    </changeSet>

    <changeSet id="2" author="root">
    <mongodb:createIndex collectionName="documents">
    <mongodb:keys>
    { "order_id": 1 }
    </mongodb:keys>
    <mongodb:options>
    { "unique": true, "name": "idx_order_id_unique" }
    </mongodb:options>
    </mongodb:createIndex>
    </changeSet>

    <changeSet id="3" author="root">
    <mongodb:createIndex collectionName="documents">
    <mongodb:keys>
    { "user_id": 1 }
    </mongodb:keys>
    <mongodb:options>
    { "name": "idx_user_id" }
    </mongodb:options>
    </mongodb:createIndex>
    </changeSet>

    <changeSet id="4" author="root">
    <mongodb:createIndex collectionName="documents">
    <mongodb:keys>
    { "timestamp": -1 }
    </mongodb:keys>
    <mongodb:options>
    { "name": "idx_timestamp_desc" }
    </mongodb:options>
    </mongodb:createIndex>
    </changeSet>

    <changeSet id="5" author="root">
    <mongodb:createIndex collectionName="documents">
    <mongodb:keys>
    { "status": 1 }
    </mongodb:keys>
    <mongodb:options>
    { "name": "idx_status" }
    </mongodb:options>
    </mongodb:createIndex>
    </changeSet>
    
    </databaseChangeLog>